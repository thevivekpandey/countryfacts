<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vivekpandey.countryfactsandquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        
        <activity android:name="com.vivekpandey.countryfactsandquiz.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
            	<action android:name="android.intent.action.SEARCH" />
      	 	</intent-filter>
        	<meta-data android:name="android.app.default_searchable" android:resource="@xml/searchable" />            
        </activity>
        
        <activity android:name="com.vivekpandey.countryfactsandquiz.Continent" android:label="@string/title_activity_continents">
        </activity>
        <activity android:name="com.vivekpandey.countryfactsandquiz.Country" android:label="@string/title_activity_country">
        </activity>
    </application>

</manifest>
